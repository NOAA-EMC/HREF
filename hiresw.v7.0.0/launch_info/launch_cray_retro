sed s:_DATE_:${DATE}:g > sub_smartinit.lsf_${DOM}_${CORE}_${CYC}

cat sub_smartinitb.lsf_in_cray_retro | sed s:_DOM_:${DOM}:g | sed s:_CORE_:${CORE}:g | sed s:_CYC_:${CYC}:g | \
sed s:_DATE_:${DATE}:g > sub_smartinitb.lsf_${DOM}_${CORE}_${CYC}

bsub < sub_ungrib.lsf_${DOM}_${CORE}_${CYC}

if [ $DOM == "conus" ]
then
bsub < sub_preprap.lsf_${DOM}_${CORE}_${CYC}
fi
