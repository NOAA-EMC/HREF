module load ics
module load ibmpe

module use -a /u/Rahul.Mahajan/modulefiles
module load anaconda
# export PYTHONPATH=/meso/save/Jacob.Carley/python/lib

# cd /meso/save/Matthew.Pyle/python_tools
base=/meso/save/Matthew.Pyle/python_tools
baseout=`pwd`

config=config.test

cyc=${1}
dom=${2}

PDY=`cat $COMROOT/date/t${cyc}z | cut -c7-14`

datestart=${PDY}${cyc}

hrs="06 12 18 24 30 36"

types="mean pmmn avrg"

for typ in $types
do
for hr in $hrs
do 

let hr2=hr-3
let hr3=hr2-3

idate=`$NDATE +${hr} $datestart`
echo idate is $idate
typeset -Z2 hr2
typeset -Z2 hr3

echo $hr2 $hr

echo "[myvars]" > $config
echo "comb_or_sub:1" >>  $config
echo "gb1:/gpfs/hps2/ptmp/Matthew.Pyle/com/hiresw/test/href.${PDY}/ensprod/href.t${cyc}z.${dom}.${typ}.f${hr}.grib2" >> $config
echo "gb2:/gpfs/hps2/ptmp/Matthew.Pyle/com/hiresw/test/href.${PDY}/ensprod/href.t${cyc}z.${dom}.${typ}.f${hr2}.grib2" >> $config
echo "gbout:${baseout}/${typ}_6h_${hr}.grib2" >> $config
echo "startfhr:$hr3" >> $config
echo "idate:$idate" >> $config
echo "frange:6" >> $config
echo "model_bucket:3" >> $config
python add_sub_pcp_href.py $config

done


config2=new_lump

idate=`$NDATE +36 $datestart`
echo "[myvars]" > $config2
echo "gb1:${baseout}/${typ}_6h_06.grib2" >> $config2
echo "gb2:${baseout}/${typ}_6h_12.grib2" >> $config2
echo "gb3:${baseout}/${typ}_6h_18.grib2" >> $config2
echo "gb4:${baseout}/${typ}_6h_24.grib2" >> $config2
echo "gb5:${baseout}/${typ}_6h_30.grib2" >> $config2
echo "gb6:${baseout}/${typ}_6h_36.grib2" >> $config2
echo "gbout:${baseout}/${typ}_36h_36.grib2" >> $config2
echo "idate:${idate}" >> $config2
echo "frange:36" >> $config2
python my36hcombo_href.py $config2

idate=`$NDATE +24 $datestart`
echo "[myvars]" > $config2
echo "gb1:${baseout}/${typ}_6h_06.grib2" >> $config2
echo "gb2:${baseout}/${typ}_6h_12.grib2" >> $config2
echo "gb3:${baseout}/${typ}_6h_18.grib2" >> $config2
echo "gb4:${baseout}/${typ}_6h_24.grib2" >> $config2
echo "gbout:${baseout}/${typ}_24h_24.grib2" >> $config2
echo "idate:${idate}" >> $config2
echo "frange:24" >> $config2
python my24hcombo_href.py $config2

done
