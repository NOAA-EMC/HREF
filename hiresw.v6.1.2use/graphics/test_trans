export MP_EUILIB=us

export OMP_NUM_THREADS=1
export MP_TASK_AFFINITY=core:1
export MP_MPILIB=mpich2

module load ics
module load ibmpe

mkdir -p /ptmpd1/Matthew.Pyle/process_4km_conus_compare_00/
cd /ptmpd1/Matthew.Pyle/process_4km_conus_compare_00/

hrs="03 06 09 12 15 18 21 24 27 30 33 36 39 42 45 48"

### montage block

types="1h 3h mucape refd_1000m t2ms t2ms_nw t2ms_ne t2ms_sw t2ms_se dwpc dwpc_nw dwpc_ne dwpc_sw dwpc_se 300z 500z 850rh 925winds \
refd_1000m_nw refd_1000m_ne refd_1000m_se refd_1000m_sw mx1000refd echotop tcolc pwtr refc pblli 48h_total"

m1=600
m2=480

for hr in $hrs
do
for typ in $types
do

# cd $hr



montage prod_arw_${typ}_f${hr}.gif para_arw_${typ}_f${hr}.gif -geometry ${m1}x${m2}+1+1 comboarw_${typ}_f${hr}.gif
# mv  comboarw_${typ}_f${hr}.gif ../

montage prod_nmmb_${typ}_f${hr}.gif para_nmmb_${typ}_f${hr}.gif -geometry ${m1}x${m2}+1+1 combonmmb_${typ}_f${hr}.gif
# mv  combonmmb_${typ}_f${hr}.gif ../

# cd ..

done

done


TARGDIR=/home/www/emc/htdocs/mmb/mpyle/hiresw/retro/2015040300/conus/

ssh mpyle@emcrzdm.ncep.noaa.gov "mkdir -p $TARGDIR"

scp *.gif mpyle@emcrzdm.ncep.noaa.gov:${TARGDIR}/

ssh mpyle@emcrzdm.ncep.noaa.gov "cp /home/www/emc/htdocs/mmb/mpyle/hiresw/retro/html/*.html $TARGDIR"

datenow=`date +%Y%m%d`
timenow=`date +%H%M`
ssh mpyle@emcrzdm.ncep.noaa.gov "cat /home/www/emc/htdocs/mmb/mpyle/hiresw/retro/html/info.html \
                                  | sed s:_WEBCYC_:00:g | sed s:_WEBDATE_:20150403:g  \
                                  | sed s:_DATESTR_:${datenow}:g | sed s:_TIMESTR_:${timenow}:g > $TARGDIR/info.html"
                      
