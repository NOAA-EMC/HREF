set -xa
msg="JOB $job HAS BEGUN"
postmsg "$jlogfile" "$msg"

cd $DATA

# 00/12 UTC CYCLE smartinit CONFIGURE
  export ENDHR=48
  export RUNTYP=${RUN}

hrs="03 06 09 12 15 18 21 24 27 30 33 36 39 42 45 48"

while [ ! -e $INPUT_DATA/prdgendone00 ]
do
sleep 10
done

$USHhiresw/hiresw_smartinit.sh_justprdgen 00

###################################

export MP_PGMMODEL=mpmd
export MP_CMDFILE=poescript
export MP_LABELIO=YES
export MP_INFOLEVEL=3
export MP_STDOUTMODE=ordered

while [ ! -e $INPUT_DATA/prdgendone06 ]
do
sleep 8
done

rm poescript
hrs="03 06"

for hr in $hrs
do
echo "$USHhiresw/hiresw_smartinit.sh_justprdgen $hr" >> poescript
done

chmod 775 $DATA/poescript
mpirun.lsf
export err=$?; err_chk

